void drawVerticalLine(char symbol, int length, int speed) {
    for (int i = 0; i < length; ++i) {
        cout << symbol << endl;
        switch (speed) {
        case 1:
            this_thread::sleep_for(chrono::milliseconds(500));
            break;
        case 2:
            this_thread::sleep_for(chrono::milliseconds(200));
            break;
        case 3:
            this_thread::sleep_for(chrono::milliseconds(100));
            break;
        default:
            cout << "Incorrect enter of speed." << endl;
            return;
        }
    }
}

void drawHorizontalLine(char symbol, int length, int speed) {
    for (int i = 0; i < length; ++i) {
        cout << symbol;
        switch (speed) {
        case 1:
            this_thread::sleep_for(chrono::milliseconds(500));
            break;
        case 2:
            this_thread::sleep_for(chrono::milliseconds(200));
            break;
        case 3:
            this_thread::sleep_for(chrono::milliseconds(100));
            break;
        default:
            cout << "Incorrect enter of speed." << endl;
            return;
        }
    }
    cout << endl;
}

